<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:orientation="vertical"
              android:background="@mipmap/cover7"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="300dp"
                                             android:layout_height="175dp">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="X"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
              android:id="@+id/dialog_mod_close_x"
              android:layout_gravity="end"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toTopOf="parent"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:id="@+id/dialog_mod_text"
            android:layout_gravity="center"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="@+id/dialog_background_image" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/view3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:hint="Write task title..."/>

    <Button
            android:text="ADD"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_mod_btn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

</LinearLayout>