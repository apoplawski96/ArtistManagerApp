<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
                                             android:layout_height="137dp" android:layout_marginHorizontal="8dp" android:layout_marginTop="8dp">

    <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/menu_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius_top_right="50dp"
            tools:src="@mipmap/cover_purple_1" />

    <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:alpha="0.85"
            android:background="@color/appBlack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/menu_item_image"
            app:layout_constraintVertical_bias="1.0"></View>

    <TextView
            android:id="@+id/menu_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/light"
            android:text="Costamcostam"
            android:textColor="@color/appWhite"
            android:textSize="@dimen/font_larger"
            app:layout_constraintBottom_toBottomOf="@+id/view6"
            app:layout_constraintEnd_toEndOf="@+id/view6"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view6" />

</android.support.constraint.ConstraintLayout>