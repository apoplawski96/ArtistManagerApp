<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                                             android:layout_height="144dp">

    <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop" android:id="@+id/menu_item_image"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/menu_item_name"
              app:layout_constraintBottom_toBottomOf="@+id/menu_item_image"
              app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>