<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@mipmap/steel_grey_darker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.CreateUserProfileActivity">

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="256dp" android:layout_marginBottom="16dp">

        <ImageView android:layout_width="match_parent" android:layout_height="200dp"
                   app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent" android:id="@+id/artist_cover_photo"
                   app:layout_constraintHorizontal_bias="0.0" app:srcCompat="@mipmap/cover5"
                   android:scaleType="centerCrop"/>
        <de.hdodenhof.circleimageview.CircleImageView android:layout_width="106dp" android:layout_height="106dp"
                                                      android:layout_gravity="center"
                                                      app:layout_constraintStart_toStartOf="parent"
                                                      android:layout_marginStart="8dp"
                                                      app:layout_constraintEnd_toEndOf="parent"
                                                      android:layout_marginEnd="8dp"
                                                      app:layout_constraintBottom_toBottomOf="parent"
                                                      android:layout_marginBottom="1dp"
                                                      android:src="@mipmap/avatar_default"
                                                      android:id="@+id/edit_profile_photo"/>
        <de.hdodenhof.circleimageview.CircleImageView android:layout_width="106dp" android:layout_height="106dp"
                                                      android:layout_gravity="center"
                                                      app:layout_constraintStart_toStartOf="parent"
                                                      android:layout_marginStart="8dp"
                                                      app:layout_constraintEnd_toEndOf="parent"
                                                      android:layout_marginEnd="8dp"
                                                      app:layout_constraintBottom_toBottomOf="parent"
                                                      android:layout_marginBottom="1dp"
                                                      android:src="@mipmap/steel_grey_darker"
                                                      android:alpha="0.5" android:id="@+id/add_avatar_image_view"/>
        <android.support.design.widget.FloatingActionButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:fabCustomSize="30dp"
                android:clickable="true"
                android:id="@+id/fab_add_photo" app:layout_constraintEnd_toEndOf="@+id/edit_profile_photo"
                app:layout_constraintBottom_toBottomOf="@+id/edit_profile_photo"
                android:layout_marginEnd="3dp" android:layout_marginBottom="3dp"
                android:src="@drawable/ic_add_a_photo_black_24dp" app:backgroundTint="@color/colorPrimary"/>


    </android.support.constraint.ConstraintLayout>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="First name"
              android:layout_marginLeft="30dp" android:fontFamily="@font/light"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:layout_marginHorizontal="@dimen/standard_105"
            android:fontFamily="@font/montserrat"
            android:id="@+id/artist_name_epk" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent"/>


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Last name"
              android:layout_marginLeft="30dp" android:fontFamily="@font/light"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:layout_marginHorizontal="@dimen/standard_105"
            android:fontFamily="@font/montserrat"
            android:ems="10"
            android:id="@+id/artist_genre_epk" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/artist_name_epk" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="SUBMIT"
            android:layout_width="wrap_content"
            android:fontFamily="@font/montserrat"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/generate_button" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</LinearLayout>