<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@mipmap/steel_grey_darker"
        android:layout_height="match_parent"
        tools:context=".activities.TaskListActivity">

    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent" android:id="@+id/scrollView2">

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical">

            <include layout="@layout/toolbar_tasks_activity"></include>

            <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/task_list_recyclerview"></android.support.v7.widget.RecyclerView>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="@string/no_tasks" android:id="@+id/no_open_tasks_tv"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Show completed tasks" android:layout_gravity="center"
                      android:fontFamily="@font/light"
                      android:layout_marginVertical="8dp" android:id="@+id/show_completed_tasks"/>

            <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/completed_task_list_recyclerview"
            ></android.support.v7.widget.RecyclerView>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="@string/no_tasks" android:id="@+id/no_completed_tasks_tv"/>

        </LinearLayout>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:src="@drawable/ic_add"
                                                        android:background="@color/colorAccent"
                                                        android:layout_gravity="bottom|end"
                                                        android:layout_marginBottom="8dp"
                                                        android:id="@+id/fab_tasks_list"
                                                        app:layout_constraintBottom_toBottomOf="parent"
                                                        android:layout_marginEnd="8dp"
                                                        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="There are no tasks, add some!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:id="@+id/tasks_list_empty_tv" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/scrollView2"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>