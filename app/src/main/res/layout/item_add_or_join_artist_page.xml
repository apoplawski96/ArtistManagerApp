<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_marginHorizontal="10dp" android:layout_marginTop="5dp"
                                    android:layout_height="114dp">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">

        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="57dp">

            <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                       android:id="@+id/add_or_join_upper_image"
                       android:layout_marginHorizontal="4dp"
                       android:layout_marginTop="4dp"
                       android:layout_marginBottom="2dp"
                       android:src="@mipmap/steel_grey_darker"
                       android:scaleType="center"
                       app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Create new ArtistPage"
                      app:layout_constraintStart_toStartOf="@+id/add_or_join_upper_image"
                      android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                      app:layout_constraintTop_toTopOf="@+id/add_or_join_upper_image"/>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="57dp">

            <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                       android:id="@+id/add_or_join_lower_image"
                       android:layout_marginHorizontal="4dp"
                       android:layout_marginTop="2dp"
                       android:layout_marginBottom="4dp"
                       android:src="@mipmap/deep_space"
                       android:scaleType="center"
                       app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Join existing ArtistPage"
                      app:layout_constraintEnd_toEndOf="@+id/add_or_join_lower_image" android:layout_marginEnd="8dp"
                      android:layout_marginBottom="8dp"
                      app:layout_constraintBottom_toBottomOf="@+id/add_or_join_lower_image"/>

        </android.support.constraint.ConstraintLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>