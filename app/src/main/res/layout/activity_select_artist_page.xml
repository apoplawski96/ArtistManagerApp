<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.SelectArtistPageActivity">

    <include layout="@layout/horizontal_select_artist_recycler_view" android:id="@+id/include"
             tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp"></include>

    <android.support.design.widget.FloatingActionButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:clickable="true" fab:srcCompat="@mipmap/puchalke"
            android:id="@+id/fab_mini_3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:visibility="gone"/>

    <android.support.design.widget.FloatingActionButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:clickable="true" fab:srcCompat="@mipmap/puchalke"
            android:id="@+id/fab_mini_2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:visibility="gone"/>

    <android.support.design.widget.FloatingActionButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:clickable="true" fab:srcCompat="@mipmap/puchalke"
            android:id="@+id/fab_mini_1" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:visibility="gone"/>

    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" fab:srcCompat="@mipmap/puchalke"
            android:id="@+id/fab_main" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:visibility="gone"/>
    <TextView
            android:text="Don't have Artist Page yet?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/no_pages_text"
            app:layout_constraintTop_toTopOf="@+id/include" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/include" android:layout_marginTop="8dp"
            android:textSize="30sp" android:textAlignment="center" android:visibility="visible"/>
    <TextView
            android:text="CREATE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/create_artist_page" app:layout_constraintStart_toStartOf="@+id/no_pages_text"
            android:layout_marginStart="40dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/no_pages_text" android:textSize="24sp"/>
    <TextView
            android:text="OR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/no_pages_text" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="JOIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/join_artist_page"
            app:layout_constraintEnd_toEndOf="@+id/no_pages_text" android:layout_marginEnd="40dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/no_pages_text"
            android:textSize="24sp"/>

</android.support.constraint.ConstraintLayout>