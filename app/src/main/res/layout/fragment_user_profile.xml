<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" android:background="@mipmap/steel_grey_darker"
             tools:context=".fragments.UserProfileFragment">

    <de.hdodenhof.circleimageview.CircleImageView android:layout_width="100dp" android:layout_height="100dp"
                                                  android:id="@+id/user_avatar"
                                                  app:layout_constraintEnd_toEndOf="parent"
                                                  android:layout_marginEnd="8dp"
                                                  android:src="@mipmap/avatar"
                                                  app:layout_constraintStart_toStartOf="parent"
                                                  android:layout_marginStart="8dp"
                                                  app:layout_constraintTop_toTopOf="parent"
                                                  android:layout_marginTop="100dp"/>
    <Button
            android:text="LOGOUT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logout_button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="100dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:id="@+id/profile_user_fullname" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/user_avatar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>


</android.support.constraint.ConstraintLayout>