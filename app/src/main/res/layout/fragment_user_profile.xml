<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" android:background="@mipmap/steel_grey_darker"
             tools:context=".fragments.UserProfileFragment">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="24dp">

        <ImageView
                android:id="@+id/home_screen_back_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_back_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
                android:id="@+id/user_avatar_progress_bar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="128dp"
                android:layout_marginEnd="8dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <ImageView
                android:id="@+id/imageView5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="110dp"
                android:layout_marginEnd="120dp"
                android:src="@mipmap/ic_nutka"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <ImageView
                android:id="@+id/imageView6"
                android:layout_width="44dp"
                android:layout_height="34dp"
                android:layout_marginStart="105dp"
                android:src="@mipmap/ic_nutka"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.57" />

        <ImageView
                android:id="@+id/imageView7"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginStart="149dp"
                android:layout_marginTop="120dp"
                android:src="@mipmap/ic_nutka"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <ImageView
                android:id="@+id/imageView3"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_marginStart="149dp"
                android:layout_marginTop="220dp"
                android:src="@mipmap/ic_nutka"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.43"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <ImageView
                android:id="@+id/imageView8"
                android:layout_width="31dp"
                android:layout_height="24dp"
                android:layout_marginTop="175dp"
                android:layout_marginEnd="120dp"
                android:src="@mipmap/ic_nutka"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="142dp"
                android:layout_marginEnd="8dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@mipmap/avatar" />

        <ImageView
                android:id="@+id/imageView10"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="130dp"
                android:src="@mipmap/ic_nutka"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.73" />

        <ImageView
                android:id="@+id/imageView4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="100dp"
                android:src="@mipmap/ic_nutka"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        <Button
                android:id="@+id/artist_category_display"
                android:layout_width="60dp"
                android:layout_height="18dp"
                android:layout_marginTop="82dp"
                android:background="@drawable/button_standard"
                android:clickable="false"
                android:fontFamily="@font/montserrat"
                android:text="Artist"
                android:textColor="@color/appWhite"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/user_avatar"
                app:layout_constraintStart_toStartOf="@id/user_avatar"
                app:layout_constraintTop_toTopOf="@id/user_avatar" />

        <TextView
                android:id="@+id/profile_user_fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/montserrat"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@color/appWhite"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_avatar"
                tools:text="Artur PopÅ‚awski" />

        <TextView
                android:id="@+id/user_profession_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/light"
                android:text="guitar, vocals"
                android:textAlignment="center"
                android:textColor="@color/appWhite"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_user_fullname"
                tools:text="guitar, vocals" />


    </android.support.constraint.ConstraintLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingStart="8dp" android:layout_marginTop="20dp">

        <ImageView android:layout_width="30dp" android:layout_height="30dp"
                   android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
                   app:srcCompat="@drawable/ic_account_circle"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/edit_profile" android:textColor="@color/appWhite"
                  android:layout_marginStart="10dp" android:textSize="@dimen/font_normal"
                  android:fontFamily="@font/montserrat" android:text="Edit profile" android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingStart="8dp" android:layout_marginTop="20dp">

        <ImageView android:layout_width="30dp" android:layout_height="30dp"
                   android:layout_marginStart="10dp" android:layout_marginEnd="10dp" app:srcCompat="@drawable/ic_edit"/>

        <TextView android:layout_width="wrap_content" android:textSize="@dimen/font_normal"
                  android:layout_height="wrap_content" android:id="@+id/change_password"
                  android:textColor="@color/appWhite" android:layout_marginStart="10dp"
                  android:fontFamily="@font/montserrat" android:text="Change password" android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingStart="8dp" android:layout_marginTop="20dp">

        <ImageView android:layout_width="30dp" android:layout_height="30dp"
                   android:layout_marginStart="10dp" android:layout_marginEnd="10dp" app:srcCompat="@drawable/ic_info"/>

        <TextView android:layout_width="wrap_content" android:textSize="@dimen/font_normal"
                  android:layout_height="wrap_content" android:id="@+id/app_info"
                  android:textColor="@color/appWhite" android:layout_marginStart="10dp"
                  android:fontFamily="@font/montserrat" android:text="App info" android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingStart="8dp" android:layout_marginTop="20dp">

        <ImageView android:layout_width="30dp" android:layout_height="30dp"
                   android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
                   app:srcCompat="@drawable/ic_legal"/>

        <TextView android:layout_width="wrap_content" android:textSize="@dimen/font_normal"
                  android:layout_height="wrap_content" android:id="@+id/legal_info"
                  android:textColor="@color/appWhite" android:layout_marginStart="10dp"
                  android:fontFamily="@font/montserrat" android:text="Legal" android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingStart="8dp" android:layout_marginTop="20dp">

        <ImageView android:layout_width="30dp" android:layout_height="30dp"
                   android:layout_marginStart="10dp" android:layout_marginEnd="10dp" app:srcCompat="@drawable/ic_exit"/>

        <TextView android:layout_width="wrap_content" android:textSize="@dimen/font_normal"
                  android:layout_height="wrap_content" android:id="@+id/logout_button"
                  android:textColor="@color/warningRed" android:layout_marginStart="10dp"
                  android:fontFamily="@font/montserrat" android:text="Logout" android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>