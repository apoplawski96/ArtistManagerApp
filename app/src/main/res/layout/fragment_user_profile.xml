<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" android:background="@mipmap/steel_grey_darker"
             tools:context=".fragments.UserProfileFragment">

    <de.hdodenhof.circleimageview.CircleImageView android:layout_width="100dp" android:layout_height="100dp"
                                                  android:id="@+id/user_avatar"
                                                  app:layout_constraintEnd_toEndOf="parent"
                                                  android:layout_marginEnd="8dp"
                                                  android:src="@mipmap/avatar"
                                                  android:layout_gravity="center"
                                                  app:layout_constraintStart_toStartOf="parent"
                                                  android:layout_marginStart="8dp"
                                                  app:layout_constraintTop_toTopOf="parent"
                                                  android:layout_marginTop="128dp"/>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/appWhite"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:id="@+id/profile_user_fullname" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/user_avatar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            tools:text="Artur PopÅ‚awski"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingStart="8dp" android:layout_marginTop="20dp">

        <ImageView android:layout_width="30dp" android:layout_height="30dp"
                   android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
                   app:srcCompat="@drawable/ic_account_circle"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/edit_profile" android:textColor="@color/appWhite"
                  android:layout_marginStart="10dp" android:textSize="@dimen/font_normal"
                  android:fontFamily="@font/montserrat" android:text="Edit profile" android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingStart="8dp" android:layout_marginTop="20dp">

        <ImageView android:layout_width="30dp" android:layout_height="30dp"
                   android:layout_marginStart="10dp" android:layout_marginEnd="10dp" app:srcCompat="@drawable/ic_edit"/>

        <TextView android:layout_width="wrap_content" android:textSize="@dimen/font_normal"
                  android:layout_height="wrap_content" android:id="@+id/change_password"
                  android:textColor="@color/appWhite" android:layout_marginStart="10dp"
                  android:fontFamily="@font/montserrat" android:text="Change password" android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingStart="8dp" android:layout_marginTop="20dp">

        <ImageView android:layout_width="30dp" android:layout_height="30dp"
                   android:layout_marginStart="10dp" android:layout_marginEnd="10dp" app:srcCompat="@drawable/ic_info"/>

        <TextView android:layout_width="wrap_content" android:textSize="@dimen/font_normal"
                  android:layout_height="wrap_content" android:id="@+id/app_info"
                  android:textColor="@color/appWhite" android:layout_marginStart="10dp"
                  android:fontFamily="@font/montserrat" android:text="App info" android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingStart="8dp" android:layout_marginTop="20dp">

        <ImageView android:layout_width="30dp" android:layout_height="30dp"
                   android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
                   app:srcCompat="@drawable/ic_legal"/>

        <TextView android:layout_width="wrap_content" android:textSize="@dimen/font_normal"
                  android:layout_height="wrap_content" android:id="@+id/legal_info"
                  android:textColor="@color/appWhite" android:layout_marginStart="10dp"
                  android:fontFamily="@font/montserrat" android:text="Legal" android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingStart="8dp" android:layout_marginTop="20dp">

        <ImageView android:layout_width="30dp" android:layout_height="30dp"
                   android:layout_marginStart="10dp" android:layout_marginEnd="10dp" app:srcCompat="@drawable/ic_exit"/>

        <TextView android:layout_width="wrap_content" android:textSize="@dimen/font_normal"
                  android:layout_height="wrap_content" android:id="@+id/logout_button"
                  android:textColor="@color/warningRed" android:layout_marginStart="10dp"
                  android:fontFamily="@font/montserrat" android:text="Logout" android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>