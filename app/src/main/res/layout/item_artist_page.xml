<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="8dp">


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@mipmap/cover_new_3">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:src="@mipmap/cover_new_3" android:scaleType="centerCrop"></ImageView>

        <View
                android:layout_width="match_parent" android:background="@color/appBlack" android:alpha="0.7"
                android:layout_height="match_parent">

        </View>

        <View
                android:id="@+id/view8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.7"
                android:background="@mipmap/steel_gray_shade_4"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="-16dp">

        </View>

        <TextView
                android:id="@+id/artist_name_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/light"
                android:text="CoolBand"
                android:textAlignment="center"
                android:textColor="@color/appWhite"
                android:textSize="@dimen/font_larger"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        <TextView
                android:id="@+id/artist_genre_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="7dp"
                android:fontFamily="@font/light"
                android:text="cool genre"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/artist_name_selector" />

        <ImageView
                android:id="@+id/ic_nutka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/view8"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_nutka" />

        <ProgressBar
                android:id="@+id/artist_page_item_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/view8"
                app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>