<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                    android:layout_marginHorizontal="10dp" android:layout_marginTop="5dp"
                                    android:layout_height="64dp">


    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

        <ImageView
                android:id="@+id/artist_image_selector"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="1"
                android:scaleType="center"
                android:src="@mipmap/steel_grey_darker"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/steel_grey_darker" />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/artist_name_selector" android:layout_marginBottom="8dp"
                  app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toTopOf="parent"
                  android:fontFamily="@font/montserrat"
                  android:textColor="@color/appWhite"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                  app:layout_constraintVertical_bias="0.95" app:layout_constraintHorizontal_bias="0.03"
                  android:text="CoolBand"/>

        <TextView
                android:id="@+id/artist_name_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/light"
                android:text="Cool genre"
                android:textColor="@color/appWhite"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/artist_name_selector"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.95" />

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/artist_avatar_selector"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="8dp"
                android:src="@mipmap/solo_artist"
                app:layout_constraintEnd_toEndOf="@+id/artist_image_selector"
                app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="8dp"
                android:alpha="0.5"
                android:src="@color/appBlack"
                app:layout_constraintEnd_toEndOf="@+id/artist_image_selector"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/page_category_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/montserrat"
                android:text="SOLO ARTIST"
                android:textColor="@color/appWhite"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="@+id/circleImageView"
                app:layout_constraintStart_toStartOf="@+id/circleImageView"
                app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>