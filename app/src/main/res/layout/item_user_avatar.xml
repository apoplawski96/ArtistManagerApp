<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView android:layout_width="50dp" android:layout_height="50dp"
                                                  app:layout_constraintBottom_toBottomOf="parent"
                                                  app:layout_constraintTop_toTopOf="parent"
                                                  android:src="@color/colorAccent"
                                                  app:layout_constraintStart_toStartOf="parent"
                                                  android:layout_marginStart="8dp"
                                                  android:id="@+id/circleImageView"/>
    <TextView
            android:text="AP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:textColor="@color/appWhite"
            android:textAlignment="center"
            android:textSize="@dimen/font_large"
            android:id="@+id/name_acronym" app:layout_constraintStart_toStartOf="@+id/circleImageView"
            app:layout_constraintBottom_toBottomOf="@id/circleImageView"
            app:layout_constraintTop_toTopOf="@id/circleImageView"
            app:layout_constraintEnd_toEndOf="@+id/circleImageView"
    />

</android.support.constraint.ConstraintLayout>