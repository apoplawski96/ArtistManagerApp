<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="350dp"
                                             android:layout_height="175dp">

    <ImageView
            android:id="@+id/dialog_background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/cover_new_2"
            tools:layout_editor_absoluteX="61dp"
            tools:layout_editor_absoluteY="16dp" />

    <View android:layout_width="match_parent" android:layout_height="match_parent"
          android:background="@android:color/black" android:alpha="0.5" android:id="@+id/view2">

    </View>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="X"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
              android:id="@+id/dialog_close_x"
              android:layout_marginTop="8dp"
              android:fontFamily="@font/montserrat"
              android:textSize="20sp"
              android:textAlignment="center"
              app:layout_constraintTop_toTopOf="parent"/>

    <EditText
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:textColor="@color/appWhite"
            android:textAlignment="center"
            android:id="@+id/dialog_redeem_code_text"
            android:fontFamily="@font/montserrat"
            app:layout_constraintTop_toTopOf="@+id/dialog_background_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/view2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/view2" android:hint="Type your page name here..."/>

    <android.support.design.widget.FloatingActionButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:fabCustomSize="35dp"
            android:clickable="true" app:srcCompat="@android:drawable/ic_menu_camera"
            android:id="@+id/dialog_add_image_button" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" tools:visibility="visible"/>
    <Button
            android:text="CREATE"
            android:layout_height="@dimen/button_short_height"
            android:layout_width="@dimen/button_short_length"
            android:background="@drawable/button_dark"
            android:textColor="@color/appWhite"
            android:fontFamily="@font/montserrat"
            android:id="@+id/dialog_copy_button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            />
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/create_dialog_progress_bar"
            app:layout_constraintEnd_toEndOf="@+id/view2" app:layout_constraintStart_toStartOf="@+id/view2"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/view2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/view2" android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>